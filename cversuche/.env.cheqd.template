# cheqd-node + ACA-Py Environment Configuration Template
# Copy this file to .env.cheqd and fill in your values

##############################################################################
# cheqd Network Configuration
##############################################################################

# Fee payer mnemonic for DID operations on testnet
# Generate a new mnemonic or use existing one
# WARNING: Never commit actual mnemonics to version control!
FEE_PAYER_TESTNET_MNEMONIC="sketch mountain erode window enact net enrich smoke claim kangaroo another visual write meat latin bacon pulp similar forum guilt father state erase bright"

# Fee payer mnemonic for mainnet (production only)
FEE_PAYER_MAINNET_MNEMONIC=""

##############################################################################
# PostgreSQL Database Configuration
##############################################################################

POSTGRES_USER=acapy
POSTGRES_PASSWORD=acapy_secret
POSTGRES_DB=acapy_wallets
POSTGRES_HOST=postgres-acapy
POSTGRES_PORT=5432

##############################################################################
# ACA-Py Wallet Keys (CHANGE THESE IN PRODUCTION!)
##############################################################################

ISSUER_WALLET_KEY=issuer_wallet_key_secure_2024
HOLDER_WALLET_KEY=holder_wallet_key_secure_2024
VERIFIER_WALLET_KEY=verifier_wallet_key_secure_2024

##############################################################################
# Admin API Security (Enable in production!)
##############################################################################

# Set to 'false' in production and use API keys
ADMIN_INSECURE_MODE=true

# API Keys for production
# ISSUER_ADMIN_API_KEY=your-secure-issuer-api-key
# HOLDER_ADMIN_API_KEY=your-secure-holder-api-key
# VERIFIER_ADMIN_API_KEY=your-secure-verifier-api-key

##############################################################################
# Logging Configuration
##############################################################################

LOG_LEVEL=info
# Options: debug, info, warning, error

##############################################################################
# PQC Plugin Configuration
##############################################################################

# Enable Post-Quantum Cryptography
PQC_ENABLED=true

# Primary signature algorithm
PQC_SIGNATURE_ALGORITHM=ML-DSA-65
# Options: ML-DSA-44, ML-DSA-65, ML-DSA-87

# Primary KEM algorithm
PQC_KEM_ALGORITHM=ML-KEM-768
# Options: ML-KEM-512, ML-KEM-768, ML-KEM-1024

# Enable hybrid mode (PQC + classical)
PQC_HYBRID_MODE=true

##############################################################################
# cheqd Plugin Configuration
##############################################################################

# Network selection
CHEQD_NETWORK=testnet
# Options: testnet, mainnet, localnet

# Use local cheqd-node (for development)
CHEQD_USE_LOCAL=true
CHEQD_LOCAL_RPC=http://cheqd-validator-0:26657
CHEQD_LOCAL_REST=http://cheqd-validator-0:1317
CHEQD_LOCAL_GRPC=cheqd-validator-0:9090

##############################################################################
# Advanced Configuration
##############################################################################

# Enable metrics and monitoring
ENABLE_METRICS=false

# Enable tracing
ENABLE_TRACING=false

# Webhook URLs (optional - for event notifications)
# ISSUER_WEBHOOK_URL=http://your-backend:8080/webhooks
# HOLDER_WEBHOOK_URL=http://your-backend:8081/webhooks
# VERIFIER_WEBHOOK_URL=http://your-backend:8082/webhooks
