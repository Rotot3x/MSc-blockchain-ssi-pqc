# Include documentation
include README.md
include LICENSE
include INSTALL.md
include QUICK_START.md
include TROUBLESHOOTING.md

# Include configuration files
include pyproject.toml
include setup.py

# Include all Python files
recursive-include pqcrypto_fm *.py
recursive-include pqcrypto_fm *.pyi

# Include bundled libraries and headers
recursive-include pqcrypto_fm/lib *
recursive-include pqcrypto_fm/include *
recursive-include pqcrypto_fm/oqs *.py

# Include build scripts
include scripts/build_liboqs.sh
include scripts/build_liboqs.bat

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude build/*
global-exclude dist/*
global-exclude *.egg-info/*